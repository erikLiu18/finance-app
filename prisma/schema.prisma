// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id // Clerk User ID
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  creditCards CreditCard[]
  sharedCreditCards SharedCreditCard[]
  notificationAlerts NotificationAlert[]

  @@map("users")
}

model CreditCard {
  id             String   @id @default(uuid())
  userId         String
  name           String   // e.g. "Amex Gold"
  dueDay         Int      // Day of month (1-31)
  notifyEmail    Boolean  @default(false)
  notifySms      Boolean  @default(false)
  phoneNumber    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  lastPaidDueDate String? // The due date of the last bill that was paid, formatted "YYYY-MM-DD"
  notificationLogs NotificationLog[]
  sharedWith SharedCreditCard[]

  @@index([userId])
  @@map("credit_cards")
}

model NotificationAlert {
  id          String   @id @default(uuid())
  userId      String
  hoursBefore Int      // 1-24
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("notification_alerts")
}

model NotificationLog {
  id              String   @id @default(uuid())
  creditCardId    String
  alertHoursBefore Int
  dueDate         DateTime
  sentAt          DateTime @default(now())

  creditCard CreditCard @relation(fields: [creditCardId], references: [id], onDelete: Cascade)

  @@unique([creditCardId, alertHoursBefore, dueDate])
  @@index([creditCardId])
  @@map("notification_logs")
}

model SharedCreditCard {
  id           String     @id @default(uuid())
  creditCardId String
  userId       String     // The user receiving the share
  createdAt    DateTime   @default(now())

  creditCard   CreditCard @relation(fields: [creditCardId], references: [id], onDelete: Cascade)
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([creditCardId, userId])
  @@index([userId])
  @@map("shared_credit_cards")
}
